
{{> header}}
<!-- Details View (Become a donor) -->
<div class="container details">
        <div class="details-content">
            <h2>{{title}}</h2>
            <strong>{{category}}</strong>
            <p>{{content}}</p>
            <div class="buttons">
              {{#if isCreator}}
                <a href="#/del/{{id}}" class="btn delete">Delete</a>
                <a href="#/edit/{{id}}" class="btn edit">Edit</a>
              {{else}}
                <a href="#/home" class="btn edit">Back</a>
              {{/if}}
            </div>
        </div>
    </div>
<!-- ./Details View (Become a donor) -->

