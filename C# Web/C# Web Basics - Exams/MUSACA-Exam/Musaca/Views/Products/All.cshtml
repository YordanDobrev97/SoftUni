
<div class="products">
    <div class="product-row d-flex justify-content-between mt-4">
        @foreach (var product in Model)
        {
        <div class="product d-flex justify-content-between w-15">
            <img src="@product.Picture" width="50" height="50" alt="...">

            <div class="data-holder w-75 px-3 mt-2">
                <div class="text-holder d-flex justify-content-between">
                    <h6>Name:</h6>
                    <h6>@product.Name</h6>
                </div>
                <div class="text-holder d-flex justify-content-between">
                    <h6>Price:</h6>
                    <h6>$@product.Price</h6>
                </div>
                <div class="text-holder d-flex justify-content-between">
                    <h6>Barcode:</h6>
                    <h6>@product.Barcode</h6>
                </div>

                <div>
                    <a href="/Products/Details?productId=@product.Id"
                       class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>
